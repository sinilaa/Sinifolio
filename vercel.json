{
    "version": 2,
    "builds": [
      { "src": "/api/*", "use": "@vercel/node" },
      { "src": "/client/public/assets/CV.pdf", "use": "@vercel/static" },
      { "src": "/client/public/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.js" },
      { "src": "/assets/(.*)", "dest": "/client/public/assets/$1" },
      { "src": "/(.*)", "dest": "/client/public/index.html" }
    ]
  }